<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yinggu.mapper.AdminMapper">
    <select id="login" resultType="Admin" parameterType="admin">
        SELECT * FROM zhiyi_admin WHERE adminName = #{adminName} AND pwd = #{pwd}
    </select>
    <select id="getAdminList" resultType="Admin">
        SELECT * FROM zhiyi_admin
    </select>
    <insert id="addAdmin" parameterType="admin">
        INSERT INTO zhiyi_admin(adminName,pwd,roleId,date) VALUES (#{adminName},#{pwd},#{roleId},#{date})
    </insert>
    <select id="queryAdmin" resultType="Admin" parameterType="admin">
        SELECT * FROM zhiyi_admin WHERE id = #{id}
    </select>
    <update id="editAdmin" parameterType="admin">
        UPDATE zhiyi_admin SET adminName = #{adminName}, pwd = #{pwd},roleId = #{roleId},date = #{date} WHERE id = #{id}
    </update>
    <select id="searchAdminName" resultType="Admin" parameterType="admin">
        SELECT * FROM zhiyi_admin WHERE adminName LIKE "%"#{adminName}"%"
    </select>
    <select id="searchRoleId" resultType="Admin" parameterType="admin">
        SELECT * FROM zhiyi_admin WHERE roleId LIKE "%"#{roleId}"%"
    </select>
    <select id="searchDate" resultType="Admin" parameterType="admin">
        SELECT * FROM zhiyi_admin WHERE date LIKE "%"#{date}"%"
    </select>
    <delete id="deleteAdmin" parameterType="admin">
        DELETE FROM zhiyi_admin WHERE id=#{id}
    </delete>

</mapper>